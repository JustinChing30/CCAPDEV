<!DOCTYPE html>
<html>
    <head>
        <title>View Profile</title>

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
        <link rel="stylesheet" href="/css/styles3.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Bruno+Ace+SC&family=DM+Serif+Text:ital@0;1&family=Play:wght@400;700&display=swap" rel="stylesheet">
    </head>

    <body>
        <header>
            <div class="header-top">
                <div class="home">
                    <a class="home-text" href="/">
                        <span style="color: rgb(139, 235, 139);">
                        Green
                        </span>
                        Tech
                    </a>
                </div>
                
                <div class="search-container"> 
                    <input type="text" id="search" placeholder="Search" class="search-textbox">

                    <button class="secondary-button"> üîç</button>
                </div>

                <div class="profile-image-div"> 
                    <img src="{{data.user.profilePic}}" class="sample-pic-header"> 
                    <p >{{data.user.username}}</p>
                </div>
            </div>
        </header>

        <div class="top-div">
            <img src="{{data.user.profilePic}}" class="sample-pic-profile"> 

            <div class="action-divs">
                <div class="top-action-div">
                    <p class="profile-username">{{data.user.username}}</p>
                </div>

                <p class="bio-tag">{{data.user.bio}}</p>

                <a href="{{data.user.github}}" class="github-tag">üîó Github</a>
            </div>
        </div>

        <div class="button-div"> 
            <button class="posts-button" id="postsBtn" onclick="window.location.href='/viewProfile'">Posts</button>

            <button class="comments-button" id="commentsBtn" onclick="window.location.href='/viewProfile1'">Comments</button>

            <button class="likes-button" id="likesBtn" onclick="window.location.href='/viewProfile2'">Likes</button>
        </div>

        <hr class="horizontal-line">

        <div class="div-likes">
            <!-- For each posts-->
            {{#each data.posts}}
                <div class="sample-liked-post">
                    <a class="post-link" href="/CCAPDEV/Posts/post1.html">
                    <div class="header-liked-post">
                        <h1 class="post-header">{{this.title}}</h1>
                        <span class="subject-tag1">{{this.tag}}</span>
                    </div>

                    <div class="user-div">
                        <img src="https://plus.unsplash.com/premium_photo-1722859221349-26353eae4744?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MXx8ZG9nfGVufDB8fDB8fHww" class="icon"/>
                        <p style="color: white;">{{this.userId.username}}</p>
                    </div>
                    <p class="post-tag">{{this.content}}</p>

                    <div class="actions">
                        <i class="bi bi-star-fill"></i>

                        <i class="bi bi-chat"></i>

                        <i class="bi bi-share"></i>

                    </div>     
                </a>
                </div>
            {{/each}}

            <!-- Each comment -->
            {{#each data.comments}}
                <div class="comment-1">
                    <div class="header-comment1">
                        <span class="comment-subject-tag1">{{this.postID.tag}}</span>
                        <p class="title-post1">&#x2022 {{this.postID.title}} &#x2022 <span style="color: aquamarine">{{this.postID.userID.username}}</span></p>
                    </div>
                        
                    <p class="date-comment1">commented 2 mo. ago</p>

                    <p class="comment">{{this.content}}</p>

                    <div class="actions">
                        <i class="bi bi-star-fill"></i>

                        <i class="bi bi-chat"></i>

                        <i class="bi bi-share"></i>

                    </div>          
                </div>
            {{/each}}

        </div>
        
    </body>
</html>