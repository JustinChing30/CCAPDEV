<!DOCTYPE html>
<html>
    <head>
        <title>Edit profile</title>
        
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="/css/styles2.css">
        <link href="/css/stylesPost.css" rel="stylesheet" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Bruno+Ace+SC&family=DM+Serif+Text:ital@0;1&family=Play:wght@400;700&display=swap" rel="stylesheet">
    </head>

    <body>
      <div class="d-flex justify-content-between align-items-center header-area">
        <!-- Home button -->
        <div class="d-flex home2">
          <a class="home" href="/">
            <span style="color: rgb(139, 235, 139);">
              Green
            </span>
            Tech
          </a>
        </div>
        
        <!-- Profile picture and username -->
        <div class="d-flex align-items-center position-relative">
          <div class="rounded-circle overflow-hidden pfp-topright">
          <button type="button" id="profileDropdownBtn">
            <img src="{{userData.profilePic}}" class="sample-pic-profile"> 
          </button>
          </div>
              <div id="profileDropdown" class="profile-dropdown">
                <a href="/viewProfile">View Profile</a>
                <a href="/logout">Logout</a>
            </div>
          
          <p class="mb-0 ms-1">{{userData.username}}</p>
        </div>
      </div>

        <div class="main">
            <div class="title-tag-div">
                <p class="title-tag">Edit Profile</p>
            </div>

            <div class="change-profile-div">
                <img src="{{userData.profilePic}}" class="sample-pic">

                <div>
                    <p class="username"><span class="user-id"><strong>{{userData.username}}</strong><br>{{userData.nickname}}</p>
                </div>

                <button class="change-photo" onclick="openModal()"> Change photo</button>
            </div>

        <form action="/updateFields" method="POST">
            <div class="bio-div">
                <p class="bio-tag">Bio</p>
                
                <input type="text" name="bio" id="bio" placeholder="Bio" class="bio-textbox" value="{{userData.bio}}">
            </div>

            <div class="github-div">
                <p class="github-tag">Github</p>

                <input type="text" name="github" id="github-link" placeholder="Github" class="github-textbox" value="{{userData.github}}">
            </div>

            <div class="save-changes-div">
                <button class="save-changes">Save changes</button>
            </div>
        </form>

        <div id="changePhotoModal" class="modal">
            <div class="modal-content">
                <h2>Change Profile Photo</h2>
                
                <form id="uploadForm" action="/changeProfileImage" method="POST" enctype="multipart/form-data">
                    <input type="file" id="profilePicInput" name="profilePic" accept="image/*" required style="display: none;">
                    <button type="button" class="modal-button blue" onclick="triggerFileInput()">Upload Photo</button>
                    <button type="submit" class="modal-button green">Save Photo</button>
                </form>

                <button class="modal-button" onclick="closeModal()">Cancel</button>
            </div>
        </div>

    </body>

    <script src="/js/script5.js"></script>
</html>

